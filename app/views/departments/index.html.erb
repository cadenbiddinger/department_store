<h1>Departments:</h1>
<%= link_to 'Click to Create New Department', new_department_path %>
<ul>
  <% @departments.each do |department| %>
    <li><%= link_to department.name %></li>

    <%= link_to 'Show Department', department_path(department)%>
    <%= link_to 'Edit Department', edit_department_path(department)%>
    <%= link_to 'Delete Department', department, method: :delete %>
  <% end %>
   
</ul>